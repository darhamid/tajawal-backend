{
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",                       
    "module": "commonjs",
    "lib": [ "es2015", "es2016", "es2017" ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",                        
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",               
    "baseUrl": "./src",                      
    "typeRoots": [ "node_modules" ],         
    "types": [ "node" ],
    "allowSyntheticDefaultImports": true,    
    "esModuleInterop": true,           
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
}